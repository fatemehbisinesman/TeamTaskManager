    <link href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>

<body>

    <header id="header" class="fixed-top">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-xl-11 d-flex align-items-center justify-content-between">

                    <!-- لوگو و منو سمت راست -->
                    <div class="d-flex align-items-center">
                        <h1 class="logo m-0">
                            <a asp-controller="Home" asp-action="Index">تسکوریا</a>
                        </h1>
                        <nav class="nav-menu d-none d-lg-block ms-4">
                            <ul class="d-flex align-items-center gap-3 mb-0">

                                <li><a asp-controller="Home" asp-action="Index">خانه</a></li>
                                <li><a href="#about">درباره ما</a></li>
                                <li><a href="#services">سرویس‌ها</a></li>
                                <li><a href="#portfolio">نمونه کارها</a></li>
                                <li><a href="#team">تیم</a></li>
                                <li><a href="#contact">تماس با ما</a></li>
                            </ul>
                        </nav>
                    </div>

                    <!-- دکمه‌ها و سرچ سمت چپ -->
                    <div class="d-flex align-items-center gap-2">
                        <form class="d-flex" asp-controller="Projects" asp-action="Search" method="get">
                            <input class="form-control form-control-sm" type="search" name="query" placeholder="جستجو..." />
                            <button class="btn btn-sm btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>

                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                        {
                            var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                            if (role == "Admin")
                            {
                    <a class="btn btn-sm btn-outline-info rounded-pill px-3 py-1" asp-controller="Admin" asp-action="Dashboard">پنل مدیریت</a> }
                                    else
                                    {
                    <a class="btn btn-sm btn-outline-info rounded-pill px-3 py-1" asp-controller="Users" asp-action="Dashboard">داشبورد</a> }
            }
            else
            {
                    <a class="btn btn-sm btn-outline-primary rounded-pill px-3 py-1" asp-controller="Auth" asp-action="Login">ورود</a>
                    <a class="btn btn-sm btn-outline-success rounded-pill px-3 py-1" asp-controller="Auth" asp-action="Register">ثبت‌نام</a>
                }

                    </div>

                </div>
            </div>
        </div>

    </header>

    <!-- ======= Main ======= -->
    <main id="main" class="pt-5 mt-5">
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-info text-center text-md-end">
