@model TeamTaskManager.Models.User

@{
    ViewData["Title"] = "افزودن کاربر جدید";
}

<h2 class="text-end my-4">افزودن کاربر جدید</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="text-end">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">نام کامل</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">ایمیل</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label">رمز عبور</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label">نقش کاربر</label>
                <select asp-for="Role" class="form-control">
                    <option value="User">کاربر عادی</option>
                    <option value="Admin">مدیر</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="ثبت کاربر" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
