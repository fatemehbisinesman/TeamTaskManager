@model IEnumerable<TeamTaskManager.Models.User>

@{
    ViewData["Title"] = "لیست کاربران";
}

<section class="container my-5 text-end">
    <h2 class="mb-4">👥 لیست کاربران</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ افزودن کاربر جدید</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>نام کامل</th>
                <th>ایمیل</th>
                <th>نقش</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Role == "Admin")
                        {
                            <span class="badge bg-danger">مدیر</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">کاربر</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ ویرایش</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">📄 جزئیات</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
