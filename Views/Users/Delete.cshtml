@model TeamTaskManager.Models.User

@{
    ViewData["Title"] = "حذف کاربر";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 text-end">
                <h3 class="text-danger mb-4">آیا مطمئن هستید که می‌خواهید این کاربر را حذف کنید؟</h3>

                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item">
                        <strong>نام کامل:</strong> @Model.FullName
                    </li>
                    <li class="list-group-item">
                        <strong>ایمیل:</strong> @Model.Email
                    </li>
                    <li class="list-group-item">
                        <strong>نقش:</strong> @Model.Role
                    </li>
                </ul>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">✅ بله، حذف شود</button>
                    <a asp-action="Index" class="btn btn-secondary">❌ خیر، بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</section>
