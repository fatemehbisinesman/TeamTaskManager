@{ ViewData["Title"] = "فراموشی رمز عبور"; }

<section class="container my-5 px-3">
    <div class="row align-items-center justify-content-center">
        <!-- فرم سمت راست -->
        <div class="col-md-6">
            <div class="p-4 border rounded bg-white shadow-sm">
                <h3 class="mb-4 text-end">بازیابی رمز عبور</h3>

                <form asp-action="ForgotPassword" method="post" class="text-end">
                    <div class="form-group mb-3">
                        <label for="email">ایمیل</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">ارسال لینک بازیابی</button>

                    @if (TempData["Message"] != null)
                    {
        <div class="alert alert-info mt-3">@TempData["Message"]</div>}
                </form>
            </div>
        </div>

        <!-- تصویر سمت چپ -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/assets/img/preloader.gif" alt="فراموشی رمز" class="img-fluid rounded shadow" />
        </div>
    </div>
</section>