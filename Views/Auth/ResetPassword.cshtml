@model TeamTaskManager.ViewModels.ForgotPasswordViewModel

@{ ViewData["Title"] = "بازیابی رمز جدید"; }

<section class="container my-5 px-3">
    <div class="row align-items-center justify-content-center">
        <!-- فرم سمت راست -->
        <div class="col-md-6">
            <div class="p-4 border rounded bg-white shadow-sm">
                <h3 class="mb-4 text-end">تغییر رمز عبور</h3>

                <form asp-action="ResetPassword" method="post" class="text-end">
                    <input type="hidden" asp-for="Email" />

                    <div class="form-group mb-3">
                        <label for="newPassword">رمز عبور جدید</label>
                        <input asp-for="NewPassword" type="password" class="form-control" required minlength="6" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="confirmPassword">تکرار رمز عبور</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required minlength="6" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">ثبت رمز جدید</button>

                    @if (TempData["ErrorMessage"] != null)
                    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>}
                </form>
            </div>
        </div>

        <!-- تصویر سمت چپ -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/assets/img/preloader.gif" alt="بازیابی رمز" class="img-fluid rounded shadow" />
        </div>
    </div>
</section>