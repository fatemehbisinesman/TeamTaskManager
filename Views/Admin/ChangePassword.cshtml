@model TeamTaskManager.Models.User

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<section class="container my-5 d-flex justify-content-center">
    <div class="card w-100 shadow rounded-4 border-0" style="background-color: #000000; max-width: 900px;">
        <div class="row p-4">
            <!-- سمت راست: پروفایل کاربر -->
            <div class="col-md-5 d-flex flex-column align-items-center justify-content-center mb-4 mb-md-0">
                <img src="@Url.Content(Model?.ProfileImage ?? "~/assets/img/team-4.jpg")"
                     class="img-fluid rounded-circle mb-3"
                     style="width: 140px; height: 140px; object-fit: cover;" />
                <h5 class="text-light">@Model.FullName</h5>
                <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "secondary")">@Model.Role</span>
                <p class="text-muted text-center mt-2 small">لطفاً رمز عبور جدید را با دقت وارد کنید.</p>
            </div>

            <!-- سمت چپ: فرم تغییر رمز -->
            <div class="col-md-7">
                <h4 class="mb-4 text-warning">
                    <i class="bi bi-shield-lock-fill"></i> تغییر رمز عبور
                </h4>

                <form asp-action="ChangePassword" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="form-group mb-3">
                        <label class="form-label text-light">رمز عبور جدید</label>
                        <input type="password" name="newPassword" class="form-control" required minlength="8" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning rounded-pill px-3">
                            <i class="bi bi-key-fill"></i> ثبت رمز جدید
                        </button>
                        <a asp-action="UsersList" class="btn btn-outline-light rounded-pill px-3">
                            <i class="bi bi-arrow-right-circle"></i> بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>