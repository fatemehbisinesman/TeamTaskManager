@model TeamTaskManager.Models.TaskItem
@{
    ViewData["Title"] = "ویرایش وظیفه";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="p-5 shadow" style="border: 2px solid #198754; border-radius: 20px; max-width: 700px; width: 100%; background-color: #f6fff8;">
        <h4 class="text-center text-success mb-4">📝 ویرایش وظیفه</h4>

        <form asp-action="EditTask" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">عنوان</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">توضیح</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ColumnName" class="form-label">ستون</label>
                <select asp-for="ColumnName" class="form-select">
                    <option value="To Do">To Do</option>
                    <option value="Doing">Doing</option>
                    <option value="Done">Done</option>
                </select>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="ProjectBoard" asp-route-projectId="@Model.ProjectId" class="btn btn-outline-secondary">🔙 بازگشت</a>
                <button type="submit" class="btn btn-success">✔️ ذخیره تغییرات</button>
            </div>
        </form>
    </div>
</div>
