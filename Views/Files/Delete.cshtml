@model TeamTaskManager.Models.ProjectFile

@{
    ViewData["Title"] = "حذف فایل";
}

<div class="container mt-5">
    <h3 class="text-center">حذف فایل</h3>
    <div class="alert alert-warning">
        <p>آیا مطمئن هستید که می‌خواهید فایل زیر را حذف کنید؟</p>
        <p><strong>نام فایل:</strong> @Model.FileName</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger">حذف</button>
            <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>


