@model TeamTaskManager.Models.ProjectFile

@{
    ViewData["Title"] = "جزئیات فایل";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">جزئیات فایل</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.FileName</h5>
            <p><strong>تاریخ بارگذاری:</strong> @Model.UploadedAt.ToString("yyyy/MM/dd HH:mm:ss")</p>
            <p><strong>مسیر فایل:</strong> @Model.FilePath</p>

            <a href="@Url.Content(Model.FilePath)" class="btn btn-success" target="_blank">دانلود فایل</a>

            <a asp-action="Index" asp-controller="Files" class="btn btn-secondary">بازگشت به لیست فایل‌ها</a>
        </div>
    </div>
</div>