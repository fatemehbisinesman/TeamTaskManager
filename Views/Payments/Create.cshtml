@model TeamTaskManager.Models.Payment

<h2>پرداخت جدید</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>نام کاربر</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>برای چه چیزی پرداخت می‌کنید؟</label>
        <input asp-for="PaymentFor" class="form-control" />
        <span asp-validation-for="PaymentFor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>مبلغ (تومان)</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success">ثبت پرداخت</button>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}