@model TeamTaskManager.Models.Ad

@{
    ViewData["Title"] = "حذف تبلیغ";
}

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <div class="card shadow-sm border border-danger border-opacity-25 rounded-4 p-4">
        <h4 class="text-center mb-4 text-danger">
            <i class="bi bi-trash3"></i> @ViewData["Title"]
        </h4>

        <p class="text-center text-muted">آیا مطمئن هستید که می‌خواهید این تبلیغ را حذف کنید؟ این عملیات قابل بازگشت نیست.</p>

        <dl class="row">
            <dt class="col-sm-4 fw-bold text-danger">عنوان تبلیغ</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4 fw-bold text-danger">لینک تبلیغ</dt>
            <dd class="col-sm-8">
                <a href="@Model.Link" class="text-decoration-none text-primary" target="_blank">
                    🔗 @Model.Link
                </a>
            </dd>

            <dt class="col-sm-4 fw-bold text-danger">تصویر</dt>
            <dd class="col-sm-8">
                <img src="~/@Model.ImageUrl" class="img-thumbnail rounded-3 border shadow-sm" style="max-width: 180px;" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-outline-danger px-4 rounded-3">
                    🗑️ حذف تبلیغ
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">
                    🔙 بازگشت
                </a>
            </div>
        </form>
    </div>
</div>
