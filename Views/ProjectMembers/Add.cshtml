@model TeamTaskManager.Models.ProjectMember
@{
    ViewBag.Users = ViewBag.Users as List<TeamTaskManager.Models.User>;
    ViewBag.ProjectId = ViewBag.ProjectId;
}

<div class="d-flex justify-content-center my-4">
    <div class="card border border-success rounded-4 shadow p-4" style="max-width: 600px; width: 100%;">
        <h3 class="text-center mb-4 text-success">اضافه کردن عضو به پروژه شماره @ViewBag.ProjectId</h3>

        <form asp-action="AddMember" method="post">
            <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />

            <div class="mb-3">
                <label class="form-label">کاربر</label>
                <select name="userId" class="form-control" required>
                    <option value="">انتخاب کنید</option>
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Id">@user.FullName</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">نقش</label>
                <input type="text" name="role" class="form-control" value="عضو" />
            </div>

            <div class="d-flex justify-content-center mt-3 gap-3">
                <button type="submit" class="btn btn-success">افزودن</button>
                <a asp-action="Index" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>
