@model TeamTaskManager.Models.Project
@{
    ViewData["Title"] = "حذف پروژه";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="bg-dark p-4 shadow-lg" style="width: 100%; max-width: 900px; border-radius: 2rem;">

        <div class="card shadow-lg border-danger border-2 rounded-4 p-4 text-end text-black">
            <h3 class="text-danger mb-4">
                <i class="bi bi-trash3-fill"></i> حذف پروژه
            </h3>

            <div class="alert alert-danger fw-bold">
                آیا مطمئن هستید که می‌خواهید پروژه زیر را حذف کنید؟
            </div>

            <dl class="row text-end">
                <dt class="col-sm-3">عنوان</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">توضیحات</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">قیمت</dt>
                <dd class="col-sm-9">
                    @(Model.Price == 0 ? "رایگان" : $"{Model.Price:N0} تومان")
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between gap-3">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 py-2">
                        <i class="bi bi-trash-fill me-1"></i> بله، حذف شود
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                        <i class="bi bi-arrow-return-left me-1"></i> بازگشت
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>