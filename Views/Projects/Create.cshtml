@model TeamTaskManager.Models.Project
@{
    ViewData["Title"] = "ایجاد پروژه جدید";
}
<h5 class="mb-3">نقش شما در سیستم: <span class="badge bg-info">@ViewBag.UserRole</span></h5>

<section class="container my-5 d-flex justify-content-center">
    <!-- کادر مشکی بزرگ‌تر، وسط‌چین، لبه کم گرد -->
    <div style="
        background-color: #111;
        border-radius: 8px;
        padding: 30px;
        width: 100%;
        max-width: 750px;
        display: flex;
        justify-content: center;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
    ">
        <!-- کادر سبز کوچک‌تر درون مشکی -->
        <div class="rounded-3 shadow-sm w-100" style="max-width: 600px; background-color: #e6f4ea; padding: 25px;">
            <h3 class="mb-4 text-end text-success">
                <i class="bi bi-folder-plus"></i> ایجاد پروژه جدید
            </h3>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Create" method="post" enctype="multipart/form-data" class="text-end">
                <div class="form-group mb-3">
                    <label>عنوان پروژه</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label>توضیحات</label>
                    <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label>هزینه (تومان)</label>
                    <input asp-for="Price" class="form-control" type="number" min="0" value="0" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label>فعال بودن پروژه</label>
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label class="form-check-label">فعال باشد</label>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label>تصویر کاور پروژه</label>
                    <input type="file" name="coverImage" class="form-control" />
                </div>

                <!-- دکمه‌ها کپسولی -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="submit" class="btn btn-success rounded-pill px-4 py-1 small">
                        <i class="bi bi-check2-circle me-1"></i> ایجاد پروژه
                    </button>
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary rounded-pill px-4 py-1 small">
                        <i class="bi bi-arrow-right ms-1"></i> بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>