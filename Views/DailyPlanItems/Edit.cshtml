@model TeamTaskManager.Models.DailyPlanItem
@{
    ViewData["Title"] = "ویرایش برنامه";
    var persianDate = ViewBag.PersianDate as string ?? "";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="card border-warning border-3 rounded-4 shadow w-75" style="max-width: 700px;">
        <div class="card-header bg-warning text-white text-center rounded-top-4">
            <h5><i class="bi bi-pencil-fill me-1"></i> ویرایش برنامه</h5>
        </div>

        <div class="card-body px-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold text-secondary">عنوان برنامه</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">تاریخ</label>
                    <input name="PersianDate" type="text" class="form-control persian-datepicker" value="@persianDate" autocomplete="off" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold text-secondary">توضیحات</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="StartTime" class="form-label fw-bold text-secondary">زمان شروع</label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                    </div>
                    <div class="col">
                        <label asp-for="EndTime" class="form-label fw-bold text-secondary">زمان پایان</label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="IsCompleted" class="form-label fw-bold text-secondary">وضعیت</label>
                    <select asp-for="IsCompleted" class="form-select">
                        <option value="false">در حال انجام</option>
                        <option value="true">انجام شده</option>
                    </select>
                </div>

                <div class="text-center mt-4 d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-warning text-white px-4">
                        <i class="bi bi-check-circle me-1"></i> ذخیره
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-return-right me-1"></i> بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-date/dist/persian-date.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/js/persian-datepicker.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/css/persian-datepicker.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $(".persian-datepicker").persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true,
                initialValue: false
            });
        });
    </script>
}